.hamburger-menu-wrapper
  z-index 20

.hamburger-menu-content
  width 100vw
  height 100vh
  background black
  position absolute
  z-index 20
  color white
  display flex
  justify-content center
  align-items center
  flex-direction column
  font-size 5rem
  text-transform uppercase

  .menu-item
    line-height 0.8
    transform translateY(0)
    transition: all 0.3s 

  .menu-item:hover
    transform translateY(-10px)
    transition: all 0.3s 

.hamburger-menu-button
  width 50px
  height 50px
  background red
  display flex
  align-items  center
  justify-content center
  // position relative
  position absolute
  z-index 21

  .menu-top-line
  .menu-middle-line
  .menu-bottom-line
    height 5px
    background white
    display block
    width 100%
    position absolute
  
  .menu-top-line
    top 0

  .menu-bottom-line
    bottom 0
  