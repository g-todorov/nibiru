@import 'mixins'
@import 'variables'

.item-details-wrapper
  background $black-almost
  color $white-smoke
  height 100%
  justify-content center
  left 0
  padding $space-large
  position fixed
  top 0
  width 100%

.item-details
  align-content center
  align-items center
  border 1px solid $white-smoke
  display flex
  height 100%
  justify-content center
  position relative
  width 100%

  .description
    // border 1px solid blue
    position relative

  // MOVE INTO MIXIN
  .content-inner-wrapper
    display flex
    flex-wrap wrap
    justify-content center
    margin 0 auto
    max-width 50%
    width 50%

  .item-name
    bottom -40px
    color $black-almost
    font-size 60px
    position absolute

  //MIXIN
  .stroketext
    text-border()

  .image-wrapper
    img
      width 100%

  .close-button
    position absolute
    right 0
    top 0

  .previous-button-wrapper
    height 20px
    left 10px
    position absolute
    width 50px

    &:hover
      .previous-button
        &:after
          transform: rotate(-45deg)
          transition all .3s

        &:before
          transform-origin: 0 100%
          transform: rotate(45deg)
          transition all .3s

    &:active
      transform translateX(-5px)
      transition all .3s

  .previous-button
    background $white-smoke
    height 3px
    position absolute
    top calc(50% - 3px)
    transition all .3s
    width 50px

    &:after
      background $white-smoke
      content ''
      height 3px
      position absolute
      transform-origin 0 0
      transition all .3s
      width 20px

    &:before
      background $white-smoke
      content ''
      height 3px
      position absolute
      transform-origin 0 0
      transition all .3s
      width 20px

  .next-button-wrapper
    height 20px
    right 10px
    position absolute
    width 50px

  .next-button
    right 0
    background $white-smoke
    height 3px

