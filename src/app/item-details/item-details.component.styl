@import 'mixins'
@import 'variables'

.item-details-wrapper
  background $black-almost
  color $white-smoke
  height 100%
  justify-content center
  left 0
  padding $space-large
  position fixed
  top 0
  width 100%

.item-details
  align-content center
  align-items center
  border 1px solid $white-smoke
  display flex
  height 100%
  justify-content center
  position relative
  width 100%

  .description
    // border 1px solid blue
    position relative

  // MOVE INTO MIXIN
  .content-inner-wrapper
    display flex
    flex-wrap wrap
    justify-content center
    margin 0 auto
    max-width 50%
    width 50%

  .item-name
    bottom -40px
    color $black-almost
    font-size 60px
    position absolute

  //MIXIN
  .stroketext
    text-border()

  .image-wrapper
    img
      width 100%

  .close-button
    position absolute
    right 0
    top 0

  .previous-button
    left 0

  .next-button
    right 0

  .previous-button
  .next-button
    background white
    height 50px
    width 50px
    position absolute
