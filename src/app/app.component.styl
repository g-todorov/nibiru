.main-wrapper
  background grey
  height 100%
  position relative

  .menu-wrapper
    display flex
    height 200px
    justify-content center
    overflow hidden
    position fixed
    top calc(50% - 75px)
    width 100%

    .menu-bottom-border
      background black
      bottom 0
      display block
      height 5px
      left 0
      position absolute
      width 50%

    .menu-top-border
      background black
      display block
      height 5px
      position absolute
      right 0
      top 0
      width 50%

    .menu-item
      border 1px solid white
      height 150px
      margin 20px
      width 150px

.content-wrapper
  background white
  display flex
  height 0
  justify-content: center
  position fixed
  top calc(50% + 75px)
  width 100%
  z-index 1

  .content-item
    display none

.footer-wrapper
  align-content center
  border-top 1px solid white
  bottom -25px
  display flex
  height 25px
  justify-content space-around
  position fixed
  width 100%
