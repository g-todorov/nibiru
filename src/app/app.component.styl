.main-wrapper
  background grey
  height 100%
  position relative

  .menu-wrapper
    display: flex
    height 200px
    justify-content center
    position fixed
    top calc(50% - 75px)
    width: 100%
    border-top: 1px solid #ffffff
    border-bottom: 1px solid #ffffff

    .menu-item
      border 1px solid #ffffff
      height 150px
      margin 20px
      width 150px

.content-wrapper
  // background-color #008000
  // bottom 25px
  // height 100%
  // display none
  height 0
  position fixed
  top calc(50% + 75px)
  width 100%

  .content-item
    display none

.footer-wrapper
  border-top: 1px solid #ffffff
  align-content center
  // background-color #f00
  bottom -25px
  display flex
  height 25px
  justify-content center
  position fixed
  width 100%
