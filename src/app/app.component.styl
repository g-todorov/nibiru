.main-wrapper
  background grey
  height 100%
  position relative

  &::before 
    clear both
    content ""
    display table
    margin-top -1px
    height 0

  .menu-wrapper
    display: flex
    justify-content space-around
    top calc(50% - 100px)
    width: 100%
    position fixed

  .menu-item
    width 200px
    height 200px
    background blue