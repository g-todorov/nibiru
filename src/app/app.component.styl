@import 'variables'

.main-wrapper
  align-items center
  background $white-smoke
  display flex
  height 100vh
  justify-content center
  padding $space-large
  position relative

.router-wrapper
  width 100%

.border-wrapper
  border 1px solid $black-almost
  height 100%
  overflow hidden
  position relative
  width 100%

  .menu-wrapper
    display flex
    height 200px
    justify-content center
    overflow hidden
    position absolute
    top calc(50% - 75px)
    width 100%

    .menu-bottom-border
      background $black-almost
      bottom 0
      display block
      height 1px
      left 0
      position absolute
      width 50%

    .menu-top-border
      background $black-almost
      display block
      height 1px
      position absolute
      right 0
      top 0
      width 50%

    .menu-item
      height 150px
      margin 20px
      width 150px

      .menu-item-content
        border 1px solid $black-almost
        height 100%
        width 100%

.content-wrapper
  background $white-smoke
  display flex
  height 0
  justify-content: center
  overflow-x auto
  position absolute
  top calc(50% + 75px)
  width 100%
  z-index 1

  .content-item
    display none

.footer-wrapper
  align-content center
  border-top 1px solid $white-smoke
  bottom -25px
  display flex
  height 25px
  justify-content space-between
  position absolute
  width 100%
